@model List<MvcTodoApp.Models.TaskItem> 
 
<!DOCTYPE html> 
<html> 
<head> 
    <meta charset="utf-8" /> 
    <title>ةيمويلا ماهملا قيبطت - MVC</title> 
</head> 
<body> 
    <h1>ةيمويلا ماهملا ةمئاق</h1> 
    <ul> 
        @foreach (var task in Model) 
        { 
            <li> 
                @if(task.IsComplete) 
                { 
                    <s>@task.Title</s> 
                } 
                else 
                { 
                    @task.Title 
                    <form method="post" asp-action="CompleteTask" style="display:inline;"> 
                        <input type="hidden" name="id" value="@task.Id" /> 
                        <button type="submit">تلمتكا</button> 
                    </form> 
 
                    <!-- TODO:  ةمهملا ليدعت رز ةفاضإ--> 
                        <form method="post" asp-action="EditTask" style="display:inline;">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="text" name="newTitle" placeholder="عنوان جديد" />
                        <button type="submit">تعديل</button>
                    </form>
                } 
            </li> 
        } 
    </ul> 
 
    <form method="post" asp-action="AddTask"> 
        <input type="text" name="title" placeholder="ةديدج ةمهم فضأ" /> 
        <button type="submit">ةفاضإ</button> 
    </form> 
</body> 
</html> 